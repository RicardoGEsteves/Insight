{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs",
    ":enableVulnerabilityAlertsWithLabel('security')",
    "group:recommended",
    "helpers:pinGitHubActionDigests",
    ":pinAllExceptPeerDependencies",
    ":semanticPrefixFixDepsChoreOthers"
  ],
  "digest": {
    "automerge": true
  },
  "prBodyDefinitions": {
    "Change": "[{{#if displayFrom}}`{{{displayFrom}}}` -> {{else}}{{#if currentValue}}`{{{currentValue}}}` -> {{/if}}{{/if}}{{#if displayTo}}`{{{displayTo}}}`{{else}}`{{{newValue}}}`{{/if}}]({{#if depName}}https://renovatebot.com/diffs/npm/{{replace '/' '%2f' depName}}/{{{currentVersion}}}/{{{newVersion}}}{{/if}})"
  },
  "platform": "github",
  "prHeader": "RicardoGEsteves {{{groupSlug}}} update, dependency {{depName}} to v{{newVersion}}",
  "assignees": ["RicardoGEsteves"],
  "labels": ["dependencies", "major", "minor", "patch"],
  "schedule": ["every weekend"],
  "npm": {
    "minimumReleaseAge": "3 days"
  },
  "prCreation": "status-success",
  "packageRules": [
    {
      "matchSourceUrlPrefixes": ["https://github.com/"],
      "prBodyColumns": [
        "Package",
        "Type",
        "Update",
        "Change",
        "Pending",
        "OpenSSF",
        "New value",
        "Package file",
        "References"
      ]
    },
    {
      "description": "Group dependencies from package.json files",
      "matchFileNames": ["**/package.json"],
      "groupName": "All package.json changes"
    },
    {
      "description": "Automatically merge minor and patch-level updates",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "autoApprove": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "platformAutomerge": true,
      "assignAutomerge": true,
      "groupName": "all non-major dependencies",
      "groupSlug": "all-non-major",
      "matchPackagePatterns": ["*"],
      "addLabels": ["{{{matchUpdateTypes}}}", "{{{groupSlug}}}"]
    },
    {
      "description": "Dependencies major updates",
      "matchUpdateTypes": ["major"],
      "matchPackagePatterns": ["*"],
      "dependencyDashboardApproval": true,
      "addLabels": [
        "{{{matchUpdateTypes}}}",
        "{{{depName}}}-update-{{{newVersion}}}"
      ]
    }
  ],
  "group": {
    "branchTopic": "{{{groupSlug}}}",
    "commitMessageTopic": "{{{groupName}}}"
  },
  "major": {
    "automerge": false
  },
  "patch": {
    "automerge": true
  },
  "minor": {
    "automerge": true
  }
}
